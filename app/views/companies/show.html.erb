<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
       <h1>
            <%= @company.name %>
       </h1>
            <% unless @company.farms.empty? %>
            <table class="farms" summary="Company farms">
                <%= render @farms %>
            </table>

            <% end %>
    </td>
    <td class="sidebar round">
      <strong>Company</strong> <%= @company.name %><br />
      <strong>URL</strong> <%= link_to company_path(@company), @company %><br />
      <strong>Farms</strong> <%= @company.farms.count %>

    </td>
  </tr>
</table>